{
  "manifest_version": 3,
  "name": "Smart Text Summarizer",
  "version": "1.1",
  "description": "Summarize selected text (50+ words) using your own local AI model.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
  "http://127.0.0.1:5000/*",
  "<all_urls>"
],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/ai.png",
      "48": "icons/notes.png",
      "128": "icons/spark.png"
    }
  },
  "icons": {
    "16": "icons/summary.png",
    "48": "icons/ai.png",
    "128": "icons/notes.png"
  }
}
